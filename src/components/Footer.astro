---
import FooterSocial from "./FooterSocial.astro"
import FooterCorreo from "./icons/footer/FooterCorreo.astro"
import FooterGithub from "./icons/footer/FooterGithub.astro"
import FooterLinkedIn from "./icons/footer/FooterLinkedIn.astro"

const currentYear = new Date().getFullYear()

const links = [
    {
        iconName:"LinkedIn",
        href:"https://www.linkedin.com/in/alejandro-ameneyro",     
        download:""
    },
    {
        iconName:"GitHub",
        href:"https://github.com/AlexxScript",
        download:""
    },
    {
        iconName:"Correo",
        href:"mailto:https://ameneyroalex@gmail.com",       
        download:""
    },
]
---

<footer class="flex flex-col gap-5 py-10 max-w-[75vw] mx-auto border-t border-t-slate-400 text-slate-400
               lg:max-w-4xl">
    
    <div class="flex flex-col">    
        <ul class="max-w-[350px] w-full mx-auto flex flex-row flex-wrap justify-around items-center min-[425px]:flex-row gap-3 mt-2">
            {
                links.map((el) => (
                    <FooterSocial download={el.download} href={el.href}>
                        { el.iconName=="LinkedIn" && <FooterLinkedIn/> }
                        { el.iconName=="GitHub" && <FooterGithub/> }
                        { el.iconName=="Correo" && <FooterCorreo/> }
                        {el.iconName}
                    </FooterSocial>
                ))
            }
        </ul>
    </div>
    <div class="flex md:flex-row justify-start items-center">    
        <p class="text-sm self-start">@{ currentYear } Alejandro Ameneyro.</p>
    </div>
</footer>

